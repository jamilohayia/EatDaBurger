{{!-- Primary handlebars code --}}

<div class="container">
  <div class="row">
    <div class="col-12">
      <img class="rounded mx-auto d-block" src="assets/img/burger_img.png" alt="Burger Image">
      <h1 class="text-center">Eat-Da-Burger!</h1>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-6">
      <h2 class="text-center">Ready to Eat!</h2>
      <div class="list-group">
        {{#each queued }}
          <button class="list-group-item list-group-item-action" data-id="{{id}}" type="button">{{burger_name}}</button>
        {{/each}}
      </div>
    </div>
    <div class="col-6">
      <h2 class="text-center">Devoured!</h2>
      <ul class="list-group">
        {{#each devoured }}
        <li class="list-group-item">{{burger_name}}</li>
        {{/each}}
      </ul>
    </div>
  </div>

{{!-- Submit Button --}}
  <div class="row">
    <div class="col-12 text-center">
      <form action="/" method="POST">
        <input class="" type="text" name="burger_name" />
        <button class="btn" type="submit">Submit</button>
      </form>
      <span>Type the name of the burger you want to eat. Click the "Submit" button.</span>
    </div>
  </div>
</div>