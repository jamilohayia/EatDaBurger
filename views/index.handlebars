<main class="container">
    <div class="d-flex justify-content-center">
        <a href=""_blank"><img src="burger.jpg" alt="Impossible Burger" style="max-height: 250px;"></a>
    
    </div>

    <h1>Eat-Da-Burger!</h1>
    <div class="row d-flex">
        <div class="col">
            <h2>Burgers Ready To Eat!</h2>

            <ul>
                {{#each burger}}
                {{#unless devoured}}
                <li>
                    <button class="eatBtn btn btn-danger" id="{{id}}">Devour It!</button>
                    {{burger_name}}
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col">
            <h2>Yum! That was good!</h2>

            <ul>
                {{#each burger}}
                {{#if devoured}}
                <li>
                    {{burger_name}}
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <div>
        <h2>Add a burger</h2>
        <form class="create-form">

            <div class="form-group">
                <input type="text" class="form-control" id="burg" name="name" placeholder="Burger Name">
            </div>

            <button type="submit" class="btn btn-primary">Add Burger</button>
        </form>
    </div>
</main>